
@{
    ViewBag.Title = "Login/Register";
}

<h2>Login</h2>
<form action="Login" style="border-style:solid;border-color:black;border-width:medium;background-color:#bfc0c1;width:25%" method="post">
    <input type="text" required name="user" placeholder="Username" /><br />
    <input type="password" required name="password" placeholder="password" /><br />
    <input type="submit" value="Login" /><br />
</form>
<br />
<h2>Register</h2>
<form action="Register" style="border-style:solid;border-color:black;border-width:medium;background-color:#bfc0c1;width:25%" method="post">
    <input type="text" required name="user" placeholder="Username" /><br />
    <input type="email" required name="email" placeholder="Email" /><br />
    <input type="password" requried name="password" placeholder="Password" /><br />
    <input type="submit" value="Create account" /><br />
</form>